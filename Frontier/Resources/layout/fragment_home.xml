<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"

	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Select Input"
		android:id="@+id/input_select"
		android:layout_centerHorizontal="true"
		android:layout_above="@id/power_toggle"/>
	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="Power On"
		android:id="@+id/power_toggle"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_below="@id/power_toggle"
		android:id="@+id/volume_indicator"/>
</RelativeLayout>